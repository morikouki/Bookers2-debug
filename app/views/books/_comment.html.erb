<% book_comment.each do |book_comment| %>
<tr>
	<td>
		<%= attachment_image_tag(book_comment.user, :profile_image, :fill, 60, 60, fallback: "no-image-mini.jpg") %><br>
		<%= book_comment.user.name %>
	</td>
	<td><%= book_comment.book_comment %></td>
	<% if book_comment.user == current_user %>
		<td><%= link_to 'Destroy', book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class:'btn btn-danger btn-sm' %></td>
	<% end %>
</tr>
<% end %>