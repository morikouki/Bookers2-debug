
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: current_user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @book_new %>

	</div>

	<div class="col-xs-9">
		
		<h2>Book detail</h2>
		<table class="table">
			<tr id="favorite<%= @book.id %>">
				<%= render 'books/show', book: @book %>
			</tr>
		</table>
		
		<table id="comment<%= @book.id %>">
				<%= render 'books/comment', book_comment: @book_comments %>
		</table>

		<div class="comment-form">
			<%= form_with model:[@book, @book_comment] do |f| %>
				<%= f.text_area :book_comment, size:'90x5' %>
				<%= f.submit '送信' %>
			<% end %>
		</div>
	</div>
</div>

